<%= provide(:title, 'Team New') %>

<h1>New Team</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@team, url: teams_path ) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form_control' %>

      <%= f.label :location %>
      <%= f.text_field :location, class: 'form_control' %>

      <%= f.label :abbr %>
      <%= f.text_field :abbr, class: 'form_control' %>

      <%= f.label :conference %>
      <%= f.text_field :conference, class: 'form_control' %>

      <%= f.label :division %>
      <%= f.text_field :division, class: 'form_control' %>

      <%= f.label :url %>
      <%= f.text_field :url, class: 'form_control' %>

      <%= f.submit "Create new team", class: "btn btn-success" %>
    <% end %>
  </div>
</div>
